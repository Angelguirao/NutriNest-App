<div id="form">
    <h2>Signup</h2>
    <form action="/" method="POST" class="sign-up-log-in-all">
      <div>
        <label> Name
          <input type="text" name="name" placeholder="Peter..." />
        </label>
      </div>

      <div>
        <label> Last Name
          <input type="text" name="lastname" placeholder="Smith..." />
        </label>
      </div>


      <div>
        <label> Email
          <input type="text" name="email" placeholder="ironhacker@gmail.com" />
        </label>
      </div>

  
      <div>
        <label> Password
          <input type="password" name="password" placeholder="********" />
        </label>
      </div>

      <div>
        <button type="submit">Sign-up</button>
      </div>
  
      <div>
        <% if(errorMessage) { %>
        <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
      </div>

    </form>
  </div>
  
<div class="page-container">
  <h1>Single Ingredients</h1>
  <div class="container-single-ingredient">
    <h1><%= ingredient.name %></h1>
    <h3>Kcal / 100g : <%= ingredient.kcal100g  %> </h3>
  <ul>
    <h3>Macros/100g:</h3>
      <% ingredient.macros100g.forEach(function(macros) { %>
          <li> <h4>Protein: <%= macros.protein %>g</p></li>
          <li> <h4>Carbs: <%= macros.carbs %>g</p></li>
          <li> <h4>Fat: <%= macros.fat %>g</p></li>
          <% }) %>
  </ul>
  
  
  <img src="<%= ingredient.photo %>" alt="" style="height: 100px; width: auto">
  
  <form method="POST" action="/ingredients/<%- ingredient._id %>/delete">
    <!-- <input name="recipeId" value="<%- ingredient._id %>" hidden /> -->
    <button type="submit" class="form-button">Delete</button>
  </form>
  </div>
</div>



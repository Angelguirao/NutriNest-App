<div id="form">
    <h2>My Profile</h2>
    <form action="/profile" method="POST">
        <label> Name:
            <span><%= user.name %></span>
            <input type="text" name="name" placeholder="Change name..." />
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %> 
    </form>

    <form action="/profile" method="POST">
        <label> Last name:
            <span><%= user.lastname %></span>
            <input type="text" name="lastname" placeholder="Change last name..." />
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>    
    </form>

    <form action="/profile" method="POST", enctype="multipart/form-data">
        <label> Image:
            <img id="profile-image" src="<%= user.img %>" alt="profile-image">
            <input type="file" name="img" id="image-upload" accept="image/jpg, image/png">
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
    </form>
    
    <form action="/profile" method="POST">
        <label> Age:
            <span><%= user.age %></span>
            <input type="number" name="age"  placeholder="Change age..." />
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
    </form>
    
    <form action="/profile" method="POST">
        <label for="cast">Gender:</label>
        <span><%= user.gender %></span>
        <select name="gender" id="cast">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
        <button type="submit">Save</button>      
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
    </form>
    
    <form action="/profile" method="POST">
        <label> Weight (kg):
            <span><%= user.weight %></span>
            <input type="number" name="weight" placeholder="Change weight..." />
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
    </form>

    <form action="/profile" method="POST">
        <label> Height (cm):
            <span><%= user.height %></span>
            <input type="number" name="height" placeholder="Change height..." />
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
    </form>

    <form action="/profile" method="POST">
        <label> Description:
            <span><%= user.description %></span>
            <textarea name="description" placeholder="Change description..." rows="2" cols="60"></textarea>
        </label>
        <button type="submit">Save</button>
        <% if(errorMessage) { %>
            <p class="error" style="color: red;"><%= errorMessage %></p>
        <% } %>
    </form>
</div>

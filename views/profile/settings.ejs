<div id="form">
  <h2>Login</h2>
  <main class="img-info-profile-settings">
    <section id="img-profile">
      <form action="/profile" method="POST" enctype="multipart/form-data">
          <img class="image-profile-settings" src="<%= user.img %>" alt="profile-image">
      </form>
    </section>

    <section id="info-profile">
      <form action="/profile/settings" method="POST">
        <div>
          <label> Email: </label>
          <%= user.email %>
        </div>
        <div>
          <input type="text" name="email" placeholder="Enter new email..." />
          <button type="submit">Save</button>
        </div>
      </form>

      <form action="/profile/settings" method="POST">

        <div>
          <label> Password: </label>
        </div>
        <div>
          <input type="password" name="current_password" placeholder="Enter Current Password..." />
        </div>
        <div>
          <input type="password" name="new_password" placeholder="Enter New Password..." />
          <button type="submit">Save</button>
        </div>
      </form>

        <div>
          <% if(errorMessage) { %>
          <p class="error" style="color: red;"><%= errorMessage %></p>
          <% } %>    
        </div>
    </section>
  </main>
</div>
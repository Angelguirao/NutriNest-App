<h1 class="all-recipes-heading">All recipes</h1>

<div class="recipe-list-container">
  <a href="/recipes/new" class="new-recipe-button">Create New Recipe</a>

  <ul class="recipe-list">
    <% allRecipes.forEach(recipe => { %>
    <li class="recipe-item">
      <% if (recipe.photo) { %>
      <img src="<%- recipe.photo %>" alt="Recipe Photo" class="recipe-image">
      <% } %>
      <span class="recipe-name"><%- recipe.name %></span>
      <a href="/recipes/<%- recipe._id %>" class="learn-more-button">Learn More</a>
    </li>
    <% }) %>
  </ul>
</div>